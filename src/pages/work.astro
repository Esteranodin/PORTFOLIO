---
import { getCollection } from "astro:content";

import BaseLayout from "../layouts/BaseLayout.astro";

import ContactCTA from "../components/ContactCTA.astro";
import PortfolioPreview from "../components/PortfolioPreview.astro";
import Hero from "../components/Hero.astro";
import Grid from "../components/Grid.astro";

const projects = (await getCollection("work")).sort(
  (a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf()
);
---

<BaseLayout
  title="Projets | Marion Sabatier"
  description="Découvrez les projets les plus récents de Marion Sabatier"
>
  <div class="stack gap-20 ">
    <main class="wrapper stack gap-8">
      <Hero
        title=" "
        tagline="Exemples de projets pêle-mêle persos ou réalisés dans le cadre de la formation DWWM (titre RNCP)"
        align="start"
      />

      <a class="link-graphism" href="/graphism/">
        Quelques travaux print&nbsp; ici
      </a>

      <Grid variant="offset">
        {
          projects.map((project) => (
            <li>
              <PortfolioPreview project={project} />
            </li>
          ))
        }
      </Grid>
    </main>
    <ContactCTA />
  </div>
</BaseLayout>

<style>
  * {
    background: var(--gray-999);
  }

  .link-graphism {
    text-decoration: none;
    background: var(--button-color);
    border: 2px solid var(--button-color);
    color: var(--gray-999);
    font-weight: bolder;
    font-size: var(--text-lg);
    padding: 0.7em 0.5em;
    border-radius: 0.25em;
    transition: var(--theme-transition);
    width: fit-content;
    text-align: center;
  }

  .link-graphism:hover,
  .link-graphism:focus {
    background: transparent;
    outline: none;
    color: var(--gray-0);
  }


  p {
    font-size: var(--text-lg);
  }
</style>
