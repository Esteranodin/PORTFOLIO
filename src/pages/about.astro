<style>
  * {
    background: var(--gray-999);
  }

  .skills-container {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: flex-start;
    gap: 1.5rem;
    margin: 1.5rem 0;
    max-width: 100%;
  }

  .skills-container :global(img) {
    height: 80px;
    max-width: none;
  }

  .hero-container {
    margin-top: 5rem;
  }

  .about {
    display: flex;
    flex-direction: column;
    gap: 3.5rem;
    max-width: 65vw;
    margin: 0 auto;
  }

  img {
    margin-top: 0;
    border-radius: 1.5rem;
    box-shadow: var(--shadow-sm);
    width: 100%;
    max-width: 400px;
    height: auto;
    object-fit: cover;
    object-position: center;
    display: block;
  }

  section {
    display: flex;
    flex-direction: column;
    gap: 2rem;
    color: var(--gray-50);
  }

  h2 {
    position: relative;
    display: inline-block;
    z-index: 1;
  }

  h2::after {
    content: "";
    position: absolute;
    left: 0;
    opacity: 0.5;
    width: 100%;
    height: 0.3em;
    bottom: 0.1em;
    background: var(--gradient-stop-1);
    z-index: -1;
  }

  h3 {
    font-size: var(--text-xl);
    position: relative;
    display: inline-block;
    color: var(--gray-50);
  }

  .section-title {
    grid-column-start: 1;
    font-size: var(--text-2xl);
    color: var(--gray-0);
    margin: 1.5rem 0;
  }

  .content {
    grid-column: 2 / 3;
    text-align: left;
  }

  .content :global(a) {
    text-decoration: 1px solid underline transparent;
    text-underline-offset: 0.25em;
    transition: text-decoration-color var(--theme-transition);
  }

  .content :global(a:hover),
  .content :global(a:focus) {
    text-decoration-color: currentColor;
  }

  @media (min-width: 50em) {
    img {
      border-radius: 1.5rem;
      max-width: 280px;
      float: right;
      margin-left: 2rem;
      margin-top: 0.5rem;
      margin-bottom: 1rem;
    }

    .about {
      display: grid;
      grid-template-columns: 1fr 75% 1fr;
    }

    .about > :global(:first-child) {
      grid-column-start: 2;
    }

    .content p {
      margin-bottom: 1rem;
    }

    section {
      display: contents;
      font-size: var(--text-lg);
    }

    @media (max-width: 768px) {
      .skills-container {
        justify-content: center;
        gap: 0.8rem;
        margin: 1rem 0;
      }
    }

    @media (max-width: 480px) {
      .skills-container {
        flex-direction: column;
        align-items: center;
        gap: 0.5rem;
      }
    }
  }
</style>
