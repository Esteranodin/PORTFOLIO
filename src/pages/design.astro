---
import BaseLayout from "../layouts/BaseLayout.astro";
import ContactCTA from "../components/ContactCTA.astro";
import ImageCarousel from "../components/ImageCarousel.tsx";
---

<BaseLayout
  title="Graphisme & Édition | Marion Sabatier"
  description="Quelques travaux réalisés"
>
  <div class="stack gap-20">
    <main class="wrapper about">
      <div class="hero-container">
        <section>
          <h2 class="section-title">Graphisme & Édition</h2>

          <h3>Un rapide tour d'horizon de quelques travaux réalisés</h3>

          <ImageCarousel
            client:only="react"
            images={[
              { src: "/assets/design/Logo.jpg", alt: "" },
              { src: "/assets/design/Cadre_photo.jpg", alt: "" },
              { src: "/assets/design/Cadre_bois.jpg", alt: "Mockup picture" },
              { src: "/assets/design/Cadre.jpg", alt: "" },
              { src: "/assets/design/Book.jpg", alt: "Book cover" },
              { src: "/assets/design/Book2.jpg", alt: "Second book cover" },
              { src: "/assets/design/Cadres_2.jpg", alt: "" },
              { src: "/assets/design/Carte_visite.jpg", alt: "" },
              { src: "/assets/design/FF_Carte_visite.jpg", alt: "" },
              { src: "/assets/design/Dog2019.jpg", alt: "" },
              { src: "/assets/design/Etiquette.jpg", alt: "" },
              { src: "/assets/design/Journal.jpg", alt: "" },
            ]}
          />
        </section>
      </div>
    </main>
    <ContactCTA />
  </div>
</BaseLayout>

  <style>
    * {
      background: var(--gray-999);
    }

    .about {
      display: flex;
      flex-direction: column;
      gap: 3.5rem;
      max-width: 65vw;
      margin: 0 auto;
    }
    section {
      display: flex;
      flex-direction: column;
      gap: 2rem;
      color: var(--gray-50);
    }
    h2 {
      position: relative;
      display: inline-block;
      z-index: 1;
      margin-top: 2rem;
      grid-column-start: 1;
      color: var(--gray-0);
    }

    h2::after {
      content: "";
      position: absolute;
      left: 0;
      opacity: 0.5;
      width: 100%;
      height: 0.3em;
      bottom: 0.1em;
      background: var(--gradient-stop-1);
      z-index: -1;
    }
    h3 {
      font-size: var(--text-xl);
      position: relative;
      display: inline-block;
      color: var(--gray-50);
	  margin-top: 2rem;
    }

    @media (min-width: 50em) {
   
      section {
        display: contents;
        font-size: var(--text-lg);
      }
    }
  </style>
